<form method="POST" action="/pizza-orders/<%= @pizza.id %>">
  <label for="first-name-field">First name</label>
  <input type="text" name="first_name" id="first-name-field" value="<%= @pizza.first_name %>"/>
  <label for="last-name-field">Last name</label>
  <input type="text" name="last_name" id="last-name-field"/>

  <label for="qualnity-field">Quanity</label>
  <input id="quantity-field" type="number" name="quantity" min="1" max="100"/>

  <label for="topping-select">Choose your topping</label>
  <select name="topping" id="topping-select"/>
   <option value="margherita">Margherita</option>
   <option value="pepperoni">Pepperoni</option>
   <option value="rocket">Rocket</option>
   <input type="submit" value="Edit Pizza">
</select>

</form>
